        <Button Content="Guardar" HorizontalAlignment="Center" Margin="0,306,0,0" VerticalAlignment="Top" Height="34" Width="120" Click="ButtonGuardar_Click"/>
        <Label Content="Actualizacion datos " HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" FontSize="25"/>
        <TextBox x:Name="txtID" IsReadOnly="True" HorizontalAlignment="Left" Margin="313,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178" TextChanged="txtNombres_TextChanged" Height="19"/>
